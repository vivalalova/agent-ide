{
  "name": "agent-ide",
  "version": "0.2.0",
  "description": "程式碼智能工具集 for AI Agents",
  "type": "module",
  "main": "dist/shared/index.js",
  "types": "dist/shared/index.d.ts",
  "bin": {
    "agent-ide": "./bin/agent-ide.js"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc && npm run postbuild",
    "postbuild": "mkdir -p dist/plugins/swift/swift-bridge && cp src/plugins/swift/swift-bridge/swift-parser dist/plugins/swift/swift-bridge/ 2>/dev/null || true",
    "test": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run",
    "test:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest --watch",
    "test:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --coverage",
    "test:single": "NODE_OPTIONS='--expose-gc --max-old-space-size=2048' npx vitest run --pool=forks --poolOptions.forks.singleFork=true",
    "test:bail": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --bail=1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.{ts,js}' --fix",
    "review:test": "codex \"review 所有測試 code, 把修改建議更新到 review.md\""
  },
  "keywords": [
    "agent-ide",
    "ast",
    "parser",
    "typescript",
    "code-intelligence"
  ],
  "author": "Agent IDE Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vivalalova/agent-ide.git"
  },
  "homepage": "https://github.com/vivalalova/agent-ide",
  "bugs": {
    "url": "https://github.com/vivalalova/agent-ide/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^4.0.0",
    "chokidar": "^4.0.3",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "memfs": "^4.38.2",
    "semantic-release": "^25.0.1",
    "tsx": "^4.20.5",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "dependencies": {
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "commander": "^12.1.0",
    "glob": "^11.0.3",
    "minimatch": "^10.0.3",
    "typescript": "^5.0.0",
    "web-tree-sitter": "^0.25.10"
  }
}
